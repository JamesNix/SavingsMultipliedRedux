%html{lang: "en"}
  %head
    %title= content_for(:html_title) || SavingsMultpliedRedux
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/custom.modernizr"
    %meta{ charset: "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    = csrf_meta_tags
  %body
    .top-color
    .bottom-color
    %ul#devise_navigation
      - if user_signed_in?
        %li
          You are signed in as
          = link_to(current_user.full_name, main_app.user_path(current_user))
        %li= link_to('sign out', destroy_user_session_path, method: :delete)
      - else
        %li= link_to("sign up", new_user_registration_path)
        %li#sign-in= link_to("sign in", new_user_session_path)
    .clear
    %ul#main_navigation
      %li= link_to "Buy", auctions_path
      %li= link_to "Sell", new_auction_path
      %li= link_to "How it Works", "/pages/howitworks"
      %li= link_to "Links", "/pages/links"
      %li= link_to "Community", "/pages/community"
      %li= render partial: "auction_searches/search_term_form"
    #main_container
      %header
        %h1#header_img= image_tag "savings-multiplied-logo.png"
        %ul#site_navigation
          %li#about_link= link_to "About", "/pages/about"
          %li#contact_link= link_to "Contact", "/pages/contact"
          %li#blog_link= link_to "Blog", "/pages/blog"
          %li#press_link= link_to "Press", "/pages/press"
        %h2#subhead where parents of multiples save, sell &amp; share
        .clear#spacer
      #content
        .notice= notice
        .alert= alert
        = yield
      - 18.times do |i|
        = image_tag "homepage/dotted_line_44_36.png", :id => "dots"

      #callouts
        = image_tag "homepage/facebook_callout.png"
        = image_tag "homepage/twitter_callout.png"
        = image_tag "homepage/message_board_callout.png"
        = image_tag "homepage/special_offers_callout.png"

    %footer
      %ul
        %li= link_to "Link here", "#"
        %li= link_to "Link here", "#"
        %li= link_to "Link here", "#"
        %li= link_to "Link here", "#"
        %li= link_to "Link here", "#"
        %li#last= link_to "Link here", "#"
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
